@model LibraryApp.Models.AuthorEditModel
@{
    ViewBag.Title = "Редактирование авторов";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Author", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.Name)</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a class="btn btn-default" href="/author/index">Назад</a>
        </div>
    </div>
}