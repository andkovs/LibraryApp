@model LibraryApp.Models.CategoryListModel
@{
    ViewBag.Title = "Выберите категорию";
}

<h2>@ViewBag.Title</h2>
<hr />

@if (Model.Role.Equals("admin"))
{
	<p><a href="/category/edit/0">Добавить категорию</a></p>
}

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Название</th>
            @if (Model.Role.Equals("admin"))
            {
                <td style="width: 1%"></td>
                <td style="width: 1%"></td>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td><a href="/book/indexcategory/@c.Id">@c.Title</a></td>
                @if (Model.Role.Equals("admin")) { 
                <td>
                    <a href="/category/edit/@c.Id" class="glyphicon glyphicon-edit"></a>
                </td>
                <td style="text-align:right">
                    <a class="glyphicon glyphicon-trash" href="/category/remove/@c.Id"></a>
                </td>
                }
            </tr>
        }
    </tbody>
    
</table>






