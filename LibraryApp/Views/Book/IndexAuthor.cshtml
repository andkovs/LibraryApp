@model LibraryApp.Models.BookListModel
@{
    ViewBag.Title = Model.CategoryAuthor;
}

<h2>@ViewBag.Title</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            @if (Model.Role.Equals("admin"))
            {
                <td style="width: 1%"></td>
                <td style="width: 1%"></td>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Books)
        {
            <tr>
                <td><a href="/book/index/@c.Id">@c.Title</a></td>
                <td>@c.Author.Name</td>
                @if (Model.Role.Equals("admin"))
                {
                <td>
                    <a href="/book/edit/@c.Id" class="glyphicon glyphicon-edit"></a>
                </td>
                <td style="text-align:right">
                    <a class="glyphicon glyphicon-trash" href="/book/remove/@c.Id"></a> 
                </td>
                }
            </tr>
        }
    </tbody>

</table>

<p>

	@if (Model.Role.Equals("admin"))
	{
		<a class="btn btn-primary" href="/book/edit/0">Добавить книгу</a>
	}

	<a class="btn btn-default" href="/author/index">Назад</a>

</p>
