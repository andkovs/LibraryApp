@model LibraryApp.Models.BookEditModel
@{
    ViewBag.Title = "Редактировать/Добавить книгу city";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Book", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.Title)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Year, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.Year)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-2">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CoverUrl, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.CoverUrl, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.CoverUrl)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AuthorId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.DropDownListFor(m => m.AuthorId, Model.Authors, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.AuthorId)</p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-6">
            @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            <p class="form-control-static">@Html.ValidationMessageFor(m => m.CategoryId)</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a class="btn btn-default" href="javascript:history.back();">Назад</a>
        </div>
    </div>
}

