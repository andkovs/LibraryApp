@model LibraryApp.Models.UserRegistryModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title</h2>
<hr />

<div class="row">
	@using (Html.BeginForm("Registry", "PersonalAccaunt", FormMethod.Post, new { @class = "col-sm-6 col-sm-offset-3 form-horizontal" }))
	{
		<div class="form-group">
			@Html.LabelFor(m => m.Login, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-6">
				@Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
			</div>
			<div class="col-sm-4">
				<p class="form-control-static">@Html.ValidationMessageFor(m => m.Login)</p>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-6">
				@Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
			</div>
			<div class="col-sm-4">
				<p class="form-control-static">@Html.ValidationMessageFor(m => m.Password)</p>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-6">
				@Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
			</div>
			<div class="col-sm-4">
				<p class="form-control-static">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
			<div class="col-sm-6">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			</div>
			<div class="col-sm-4">
				<p class="form-control-static">@Html.ValidationMessageFor(m => m.Email)</p>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-6">
				<button type="submit" class="btn btn-primary">Зарегистрироваться</button>
			</div>
		</div>

	}
</div>

